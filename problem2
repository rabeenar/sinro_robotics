    for(int n=0;n<=1;n++)
    {
        scanf("Accession number= %d\nAuthor= %s\nTitle= %s Total number= %d",b1[n].an,b1[n].title,b1[n].title,b1[n].issued);
    } 
}
void book_by_author(struct book *b,int number_of_book,char auth[])
{
    int i;
    for(i=0;i<number_of_book;i++)
    {
        if(strcmp(b+i)->author,auth)
        {
            display(*(b+i));
        }
    }
}
