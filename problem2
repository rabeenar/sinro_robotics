#include <stdio.h>
#include<string.h>

struct book
{
    int an;
    char title[30];
    char author[30];
    int issued;
};
void display(struct book b)
{
    printf("Accession number-\t%d\nBook-\t%s\nAuthor-\t%s\n",b.an,b.title,b.author);
    if(b.issued==0)
    {
        printf("Issued-\tNo\n");
    }
    else{
         printf("Issued-\tYes\n");
    }
    
}
